{
	"name": "uvch",
	"displayName": "UnrealCodeHelper",
	"description": "This is an extension which give some tools to helps you code in UE with VsCode",
	"version": "0.0.1",
	"repository": {
		"url": "https://github.com/hcabel/UnrealVsCodeHelper"
	},
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": [],
		"commands": [
			{
				"command": "UVCH.GetProjectInfos",
				"title": "Refresh",
				"icon": "$(refresh)",
				"category": "UVCH"
			},
			{
				"command": "UVCH.PlayGame",
				"title": "Play (Game)",
				"icon": "$(play)",
				"category": "UVCH"
			},
			{
				"command": "UVCH.PlayEditor",
				"title": "Play (Editor)",
				"icon": "$(play)",
				"category": "UVCH"
			},
			{
				"command": "UVCH.BuildEditor",
				"title": "Build (Editor)",
				"icon": "$(package)",
				"category": "UVCH"
			},
			{
				"command": "UVCH.GetUnrealEnginePath",
				"title": "Find Unreal Engine folder path",
				"icon": "$(folder)",
				"category": "UVCH"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "UVCH",
					"title": "Unreal VsCode Helper",
					"icon": "resources/UnrealIcon.png"
				}
			]
		},
		"views": {
			"UVCH": [
				{
					"type": "webview",
					"id": "ProjectView",
					"name": "Project"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "UVCH.GetProjectInfos",
					"group": "navigation",
					"when": "view == ProjectView"
				}
			]
		}
	},
	"scripts": {
		"build": "webpack",
		"vscode:prepublish": "npm run package",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@babel/core": "^7.17.5",
		"@babel/preset-react": "^7.16.7",
		"@babel/preset-typescript": "^7.16.7",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@types/react": "^18.0.9",
		"@types/react-dom": "^18.0.4",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@vscode/test-electron": "^2.1.3",
		"babel-loader": "^8.2.3",
		"css-loader": "^6.7.1",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"style-loader": "^3.3.1",
		"ts-loader": "^9.2.8",
		"typescript": "^4.6.4",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	}
}
