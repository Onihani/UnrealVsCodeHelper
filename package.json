{
	"name": "uvch",
	"publisher": "HugoCabel",
	"displayName": "UnrealVsCodeHelper",
	"description": "A helper for Unreal Engine, giving you lots of useful tools in a single extensions",
	"version": "0.3.0",
	"icon": "resources/UVCHExtensionIcon.png",
	"repository": {
		"url": "https://github.com/hcabel/UnrealVsCodeHelper"
	},
	"bugs": {
		"url": "https://github.com/hcabel/UnrealVsCodeHelper/issues",
		"email": "coding@hugocabel.com"
	},
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": [],
		"keybindings": [
			{
				"command": "UVCH.SwitchHeaderCppFile",
				"key": "alt+o"
			},
			{
				"command": "UVCH.OpenUnrealDocFromSelection",
				"key": "ctrl+f1"
			},
			{
				"command": "UVCH.SearchUnrealDoc",
				"key": "ctrl+shift+f1"
			}
		],
		"commands": [
			{
				"command": "UVCH.GetProjectInfos",
				"title": "Refresh",
				"icon": "$(refresh)",
				"category": "UVCH"
			},
			{
				"command": "UVCH.PlayGame",
				"title": "Play (Game)",
				"icon": "$(play)",
				"category": "UVCH"
			},
			{
				"command": "UVCH.PlayEditor",
				"title": "Play (Editor)",
				"icon": "$(play)",
				"category": "UVCH"
			},
			{
				"command": "UVCH.BuildEditor",
				"title": "Build (Editor)",
				"icon": "$(package)",
				"category": "UVCH"
			},
			{
				"command": "UVCH.GetUnrealEnginePath",
				"title": "Find Unreal Engine folder path",
				"icon": "$(folder)",
				"category": "UVCH"
			},
			{
				"command": "UVCH.SwitchHeaderCppFile",
				"title": "Switch between header/cpp file",
				"icon": "$(arrow-swap)",
				"category": "UVCH"
			},
			{
				"command": "UVCH.OpenUnrealDoc",
				"title": "Open Unreal Documentation",
				"icon": "$(book)",
				"category": "UVCH"
			},
			{
				"command": "UVCH.OpenUnrealDocFromSelection",
				"title": "Open Unreal Documentation from selection",
				"icon": "$(book)",
				"category": "UVCH"
			},
			{
				"command": "UVCH.SearchUnrealDoc",
				"title": "Search in Unreal doc",
				"icon": "$(book)",
				"category": "UVCH"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "UVCH",
					"title": "Unreal VsCode Helper",
					"icon": "./resources/UnrealIcon.png"
				}
			]
		},
		"views": {
			"UVCH": [
				{
					"type": "webview",
					"id": "UnrealProjectView",
					"name": "Project"
				},
				{
					"type": "webview",
					"id": "UnrealDocView",
					"name": "Unreal Documentation Explorer"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "UVCH.GetProjectInfos",
					"group": "navigation",
					"when": "view == ProjectView"
				}
			]
		}
	},
	"scripts": {
		"build": "webpack",
		"vscode:prepublish": "npm run package",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@babel/core": "^7.17.5",
		"@babel/preset-react": "^7.16.7",
		"@babel/preset-typescript": "^7.16.7",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@types/react": "^18.0.9",
		"@types/react-dom": "^18.0.4",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@vscode/test-electron": "^2.1.3",
		"babel-loader": "^8.2.3",
		"css-loader": "^6.7.1",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"style-loader": "^3.3.1",
		"ts-loader": "^9.2.8",
		"typescript": "^4.6.4",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"axios": "^0.27.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	}
}
